      "\t{",
      "\t\t$3",
      "\t}",
      "\t\tbreak;$0",
      "\tdefault:",
      "\t\tbreak;",
      "}"
    ],
    "description": "Switch Statement"
  },
  "Case": {
    "prefix": "case",
    "body": ["case ${1:value}:", "\t{", "\t\t$0", "\t}", "\tbreak;"],
    "description": "Switch Statement"
  },
